<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.teapot.lilbigb.MainScreen">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kort"
        android:id="@+id/kortBtn"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Påmindelser"
        android:id="@+id/settingsBtn"
        android:layout_alignTop="@+id/kortBtn"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log ud"
        android:id="@+id/logoutBtn"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

        <TextView
            android:layout_below="@+id/logoutBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Fundne bluetooth enheder:"
            android:id="@+id/BTheadline"/>
        <ListView
            android:layout_below="@+id/BTheadline"
            android:id="@+id/foundBTItems"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            />

    <TextView
        android:layout_below="@+id/foundBTItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fundne WIFI Netværk:"
        android:id="@+id/WLheadLine"/>
    <ListView
        android:layout_below="@+id/WLheadLine"
        android:id="@+id/foundWlan"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        />


</RelativeLayout>
